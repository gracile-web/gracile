{
  "name": "@gracile/root",
  "version": "0.0.0",
  "private": true,
  "description": "A thin, full-stack, web framework",
  "keywords": [
    "full-stack",
    "custom-elements",
    "ssr",
    "server",
    "server-side-rendering",
    "static",
    "web-components",
    "lit"
  ],
  "homepage": "https://gracile.js.org",
  "repository": {
    "type": "git",
    "url": "https://github.com/gracile-web/gracile"
  },
  "license": "ISC",
  "author": {
    "name": "Julian Cataldo",
    "email": "contact@juliancataldo.com",
    "url": "https://www.juliancataldo.com"
  },
  "type": "module",
  "main": "index.js",
  "scripts": {
    "build": "turbo build --concurrency 20",
    "clean": "turbo clean --concurrency 20",
    "dev": "turbo dev --concurrency 20",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "preinstall": "npx only-allow pnpm",
    "lint:commit": "commitlint --from=HEAD~1",
    "lint:js": "eslint .",
    "lint:js:fix": "eslint --fix .",
    "list-pkg": "pnpm m ls --json --depth=-1 | node -e \"const path = require('path'); console.log(JSON.parse(require('fs').readFileSync('/dev/stdin', 'utf-8')).map((m) => path.relative(__dirname, m.path)).filter(Boolean))\" # From https://github.com/pnpm/pnpm/issues/1519",
    "prepare": "husky",
    "sort-pjson": "pnpm sort-package-json package.json packages/{addons,userland,cli,internal}/*/package.json packages/engine/package.json integration/package.json",
    "test": "pnpm --prefix integration test",
    "test:dev": "pnpm --prefix integration test:dev",
    "copy-readmes": "cp README.md packages/gracile/README.md"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.2.2",
    "@commitlint/config-conventional": "^19.2.2",
    "@eslint/eslintrc": "^3.0.2",
    "@lerna-lite/cli": "^3.3.3",
    "@lerna-lite/list": "^3.3.3",
    "@lerna-lite/publish": "^3.3.3",
    "@types/eslint": "^8.56.9",
    "@types/node": "^20.12.7",
    "@typescript-eslint/eslint-plugin": "^7.7.0",
    "@typescript-eslint/parser": "^7.7.0",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-json-files": "^4.1.0",
    "eslint-plugin-lit": "^1.11.0",
    "eslint-plugin-lit-a11y": "^4.1.2",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-regex": "^1.10.0",
    "eslint-plugin-simple-import-sort": "^12.1.0",
    "eslint-plugin-tsdoc": "^0.2.17",
    "husky": "^9.0.11",
    "prettier": "^3.2.5",
    "sort-package-json": "^2.10.0",
    "tsx": "^4.7.2",
    "turbo": "^1.13.2",
    "typedoc": "^0.25.13",
    "typedoc-plugin-markdown": "^3.17.1",
    "typescript": "5.5.0-beta"
  },
  "packageManager": "pnpm@9.0.6"
}
