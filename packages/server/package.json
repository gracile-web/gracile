{
  "name": "@gracile/server",
  "version": "0.6.4-next.0",
  "description": "A thin, full-stack, web framework",
  "keywords": [
    "custom-elements",
    "full-stack",
    "lit",
    "meta-framework",
    "server",
    "server-side-rendering",
    "ssr",
    "static",
    "web-components"
  ],
  "homepage": "https://gracile.js.org",
  "repository": {
    "type": "git",
    "url": "https://github.com/gracile-web/gracile",
    "directory": "packages/server"
  },
  "license": "ISC",
  "author": {
    "name": "Julian Cataldo",
    "email": "contact@juliancataldo.com",
    "url": "https://www.juliancataldo.com"
  },
  "type": "module",
  "exports": {
    "./*": "./dist/*.js",
    "./ambient": {
      "types": "./ambient.d.ts"
    }
  },
  "files": [
    "./dist/**/*",
    "!/dist/**/*.test.*"
  ],
  "scripts": {
    "// pretest": "node --run build",
    "build": "tsc",
    "clean": "rm -rf ./dist",
    "dev": "tsc --watch",
    "test:unit": "c8 node --test --enable-source-maps 'dist/**/*.test.js'",
    "test:unit:dev": "node --test --enable-source-maps --watch 'dist/**/*.test.js'"
  },
  "dependencies": {
    "@gracile/engine": "workspace:^"
  },
  "devDependencies": {
    "@gracile/client": "workspace:^",
    "@gracile/internal-tsconfigs": "workspace:^",
    "@gracile/internal-utils": "workspace:^",
    "@types/node": "^22.8.1",
    "c8": "^10.1.2",
    "tsx": "^4.19.3",
    "typescript": "5.6.3"
  },
  "peerDependencies": {
    "@lit-labs/ssr": "^3.2.2",
    "lit": "^3.2.1"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "// name": "@gracile/server"
}
