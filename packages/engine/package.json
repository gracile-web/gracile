{
  "name": "@gracile/engine",
  "version": "0.8.0-next.1",
  "description": "A thin, full-stack, web framework",
  "keywords": [
    "custom-elements",
    "full-stack",
    "lit",
    "meta-framework",
    "server",
    "server-side-rendering",
    "ssr",
    "static",
    "web-components"
  ],
  "homepage": "https://gracile.js.org",
  "repository": {
    "type": "git",
    "url": "https://github.com/gracile-web/gracile",
    "directory": "packages/engine"
  },
  "license": "ISC",
  "author": {
    "name": "Julian Cataldo",
    "email": "contact@juliancataldo.com",
    "url": "https://www.juliancataldo.com"
  },
  "type": "module",
  "exports": {
    ".": "./dist/index.js",
    "./*": "./dist/*.js",
    "./ambient": "./ambient.d.ts",
    "./server/*": {
      "types": "./dist/server/*.js",
      "development": "./dist/server/*.js",
      "default": "./dist/server/*.js"
    }
  },
  "files": [
    "./ambient.d.ts",
    "./dist/**/*",
    "!/dist/**/*.test.*",
    "!/dist/typedoc-entrypoint.*"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf ./dist",
    "dev": "tsc --watch",
    "test:unit": "c8 node --test --enable-source-maps 'dist/**/*.test.js'",
    "test:unit:dev": "node --test --enable-source-maps --watch 'dist/**/*.test.js'"
  },
  "dependencies": {
    "@gracile-labs/better-errors": "workspace:^",
    "@gracile/internal-utils": "workspace:^",
    "@whatwg-node/server": "^0.9.50",
    "fdir": "^6.4.2",
    "picocolors": "^1.1.1",
    "urlpattern-polyfill": "^10.0.0",
    "vite": "^6.0.5"
  },
  "devDependencies": {
    "@gracile/internal-tsconfigs": "workspace:^",
    "@types/express": "5.0.0",
    "@types/node": "^22.8.1",
    "c8": "^10.1.2",
    "sinon": "19.0.2",
    "tsx": "^4.19.1",
    "typescript": "5.6.3"
  },
  "peerDependencies": {
    "@lit-labs/ssr": "^3.2.2",
    "@lit-labs/ssr-client": " ^1.1.7",
    "lit": "^3.1.3"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  }
}
