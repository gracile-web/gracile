      "default": "./dist/server/server.js"
    }
  },
  "files": [
    "./ambient.d.ts",
    "./dist/**/*",
    "!/dist/**/*.test.ts"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf ./dist",
    "dev": "tsc --watch",
    "test:unit": "c8 node --test --enable-source-maps 'dist/**/*.test.js'",
    "test:unit:dev": "node --test --enable-source-maps --watch 'dist/**/*.test.js'"
  },
  "dependencies": {
